
@{
    ViewBag.Title = "Ofertas de Empleo";
}
<!--FORMULARIO OFERTAS--> 
@using (Html.BeginForm("_Listado", "Ofertas", FormMethod.Post, new { id = "adminForm" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("pagina", "")
    @Html.Hidden("EjecutarFuncion", "AltoFiltro();")
    <div class="container-fluid cero-padding">   
        <!--Filtro-->
        <div id="filtro" class="col-xs-12 col-sm-3 cero-padding">
            @Html.Partial("_FiltroOfertas")
        </div>
        <!--Cuerpo-->
        <div id="parcial" class="col-xs-12 col-sm-9 sp cuerpo-oferta">
            @Html.Action("_Listado")
        </div>  
    </div>
}
<!--FIN FORMULARIO OFERTAS-->
<script>
    $(document).ready(function () {
        AltoFiltro();
    });
    function AltoFiltro() {
        //Ajustar HEIGHT del Filtro dinamicamente
        $('#filtro').css('height', 'auto');

        var altoFiltroInicial = $('#filtro').height();
        var altoCuerpo = $('#parcial').height();

        if (altoCuerpo > altoFiltroInicial) $('#filtro').height(altoCuerpo);
    }
</script>
<script src="~/Scripts/paginacion.js"></script>
