@model List<Models.Idioma>

@using (Ajax.BeginForm("Eliminar", new AjaxOptions
{
    HttpMethod = "Post",
    Confirm = "¿Esta seguro de realizar la acción?",
    OnBegin = "CheckElementos",
    OnSuccess = "onSuccess"
}))
{
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Idioma</th>
                <th>Hablado</th>
                <th>Escrito</th>
                <td width="1%" class="text-center">
                    <button id="btnEliminar" type="submit" class="btn btn-danger btn-xs fa fa-trash-o"></button>   
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@i.Idiomas.Descripcion, "Acciones", new { id = i.id })</td>
                    <td>@i.Hablado</td>
                    <td>@i.Escrito</td>
                    <td class="text-center"><input type="checkbox" class="seleccion" name="idioma_id" value="@i.id" /></td>
                </tr>
            }
        </tbody>
    </table>
    <div id="mensaje" class="col-xs-6"></div>
}
