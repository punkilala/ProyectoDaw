@model List<Models.Adjuntos>

<h4>Lista Adjuntos</h4>
<br />


@if (Model.Count() == 0)
{
    <img class="img-responsive" src="../../../Content/images/noAdjuntos.jpg" />
    <br />
}
else
{
    using (Html.BeginForm("EliminarAdjunto", "Adjuntos", FormMethod.Post, new { id = "adminForm" }))

    {
        @Html.AntiForgeryToken()
            <ul class="list-group col-xs-11">

                @foreach (var item in Model)
                {
                    <li class="list-group-item" style="height: auto;">
                        <a href="@Url.Content(ViewBag.RutaAdjunta + item.fichero)" target="_blank">
                            @item.fichero
                        </a>
                        <input class="pull-right" type="checkbox" name="id" value="@item.id" />
                    </li>
                }
            </ul>
            <div class="col-xs-11" style="margin-bottom:70px;">
                <div class="col-xs-12 col-sm-9" id="mensaje"></div>
                <div class="col-xs-12 col-sm-3">
                    <img class="pull-right" id="cargando" src="~/Content/images/ajax-loader.gif" style="display:none;" />
                    <button id="btnEliminar" type="button" data-ajax="true" data-confirm="¿Esta seguro en realizar la acción?" class="btn btn-danger btn-xs pull-right"><i class="fa fa-trash-o"></i></button>.
                </div>
            </div>
    }

}

